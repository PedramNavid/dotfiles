    autoSetupRemote = true
[init]
	defaultBranch = main
[fetch]
	prune = true
[diff]
	colorMoved = zebra
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
