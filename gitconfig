	email = pedram.navid@gmail.com
[core]
	editor = nvim
	excludesfile = ~/.gitignore
	attributesFile = ~/.gitattributes
[init]
	defaultBranch = main
[fetch]
	prune = true
[diff]
	colorMoved = zebra
[pull]
	rebase = false
[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
