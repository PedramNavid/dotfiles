
# Files/Directories
alias cdp='cd $HOME/projects'
alias cdd='cd $HOME/dotfiles'
alias cddbt='cd $HOME/projects/hightouch-dwh/dbt/hightouch'
alias cdnv='cd $HOME/.config/nvim'
alias cdair='cd $HOME/projects/hightouch-airflow'
alias cdaw='cd $HOME/dotfiles/awesome/.config/awesome/'

alias dh='dirs -v' 		# print dirstack
alias l='ls -AF'
alias ll='l -l'
alias la='ls -AF'
alias ...='cd ../..'

alias rm="rm -i"
alias mv="mv -i"

# File Edits
#
export EDITOR=NVIM
if hash nvr 2>/dev/null; then
    EDITOR='nvr -s'
fi

alias vim=$EDITOR
alias nvim=$EDITOR
alias vzrc='vim ~/.zshrc'
alias vali='vim ~/.zsh/alias'
alias vexp='vim ~/.zsh/exports'
alias vrc='vim ~/.config/nvim/init.vim'
alias vaw='vim ~/.config/awesome/rc.lua'
alias vawtheme='vim ~./config/awesome/themes/pedram/theme.lua'

alias ssh='TERM=xterm-256color ssh'

if [[ -f  ~/.zsh/alias.local ]]; then
    source ~/.zsh/alias.local
fi
